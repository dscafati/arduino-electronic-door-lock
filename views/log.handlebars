<div class="row">
    <div class="col-xs-12">
        <div class="page-header">
            <h1>Admin <small>Log</small></h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-4">
        {{> sidebar }}
    </div>
    <div class="col-xs-12 col-sm-8">
        <div class="panel panel-default">
            <div class="panel-heading">Registro de actividad</div>
            <table class="table table-striped table-condensed table-responsive">
                <thead>
                    <th>Usuario</th>
                    <th>Acci√≥n</th>
                    <th>Fecha y hora</th>
                </thead>
                <tbody>
                    <tr>
                    {{#each logs}}
                        <tr>
                            <td>{{this.user}}</td>
                            <td>{{this.accion}}</td>
                            <td>{{this.date_time}}</td>
                        </tr>
                    {{/each}}
                    </tr>
                </tbody>
            </table>
            {{#if showPagination}}
                <div class="panel-footer">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            {{#ifEq 0 currentPage}}
                                <li class="disabled"><span aria-hidden="true">&laquo;</span></li>
                            {{else}}
                                <li>
                                    <a href="/log?page={{currentPage}}" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            {{/ifEq}}
                            {{#times totalPages}}
                                <li {{#ifEq this ../currentPage}}class="active"{{/ifEq}}>
                                    <a href="/log?page={{inc this}}">
                                        {{inc this}}
                                    </a>
                                </li>
                            {{/times}}
                            {{#ifEq totalPages (inc currentPage)}}
                                <li class="disabled"><span aria-hidden="true">&raquo;</span></li>
                            {{else}}
                                <li>
                                    <a href="/log?page={{inc (inc currentPage) }}" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            {{/ifEq}}
                        </ul>
                    </nav>
                </div>
            {{/if}}
        </div>
    </div>
</div>
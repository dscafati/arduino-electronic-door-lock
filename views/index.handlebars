<div class="row">
    <div class="col-xs-12">
        <div class="page-header">
            <h1>Admin <small>Dashboard</small></h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-4">
        {{> sidebar }}
    </div>
    <div class="col-xs-12 col-sm-8">
        <div class="panel panel-default">
            <div class="panel-heading">Ultimas claves</div>
            <table class="table table-striped table-condensed table-responsive">
                <thead>
                <th>Usuario</th>
                <th>Codigo</th>
                <th>Valido desde:</th>
                <th>Valido hasta:</th>
                </thead>
                <tbody>
                {{#each claves}}
                    <tr>
                        <td>{{this.user}}</td>
                        <td>{{this.codigo}}</td>
                        <td>{{formatTime this.h_desde}}</td>
                        <td>{{formatTime this.h_hasta}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-xs-12 col-sm-8">
        <div class="panel panel-default">
            <div class="panel-heading">Ultima actividad</div>
            <table class="table table-striped table-condensed table-responsive">
                <thead>
                <th>Usuario</th>
                <th>Accion</th>
                <th>Fecha y hora</th>
                </thead>
                <tbody>
                    {{#each logs}}
                        <tr>
                            <td>{{this.user}}</td>
                            <td>{{this.accion}}</td>
                            <td>{{this.date_time}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>